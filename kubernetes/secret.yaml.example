# Copy to secret.yaml and fill in values. Do not commit secret.yaml.
# Create secret: kubectl apply -f kubernetes/secret.yaml
# Values must be base64-encoded when using kubectl create secret, or use stringData (Kubernetes 1.19+).
---
apiVersion: v1
kind: Secret
metadata:
  name: rails-microcommerce-secret
  namespace: rails-microcommerce
  labels:
    app: rails-microcommerce
type: Opaque
stringData:
  # Required for Rails credentials / encrypted credentials
  RAILS_MASTER_KEY: "your-master-key-from-config/master.key"
  # Database URL (Rails merges this over database.yml in production)
  DATABASE_URL: "mysql2://user:password@mysql-host:3306/rails_microcommerce_production"
  # Optional: Stripe (for checkout)
  # STRIPE_SECRET_KEY: "sk_..."
  # STRIPE_WEBHOOK_SECRET: "whsec_..."
  # Optional: Redis (for products cache)
  # REDIS_URL: "redis://redis-host:6379/0"
  # Optional: Kafka (for order.completed events)
  # KAFKA_BROKERS: "kafka-host:9092"
